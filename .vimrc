set nocompatible

set number
set relativenumber
set cursorline
set ruler

set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
set smarttab
set autoindent
set smartindent

set hlsearch
nnoremap <silent> <Esc> :noh<CR><Esc>
set incsearch
set ignorecase
set smartcase

set showmatch
set scrolloff=10
set backspace=indent,eol,start
set encoding=utf8

set t_Co=256
syntax on
colorscheme habamax
